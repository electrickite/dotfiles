# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 5
  output_format = "i3bar"
}

order += "run_watch caffeine"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "battery all"
order += "volume master"
order += "time"

run_watch caffeine {
  pidfile = "${XDG_RUNTIME_DIR}/caffeine.pid"
  format = "â˜•"
  format_down = ""
}

wireless _first_ {
  format_up = "ðŸ“¶ %essid%quality"
  format_down = "ðŸ“¶ down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "ðŸ–§ %speed"
  format_down = "ðŸ–§ down"
}

cpu_usage {
  format = "%usage"
  max_threshold = 90
  degraded_threshold = 75
}

battery all {
  format = "%status %percentage (%remaining)"
  format_down = "No battery"
  hide_seconds = true
  integer_battery_capacity = true
  low_threshold = 15
  threshold_type = "percentage"
  status_chr = âš¡
  status_bat = ðŸ”‹
  status_unk = ?
  status_full = ðŸ”Œ
}

volume master {
  format = "ðŸ”Š %volume"
  format_muted = "ðŸ”‡ ---"
  device = "default"
}

time {
  format = "%a %b %d %l:%M%P"
}
